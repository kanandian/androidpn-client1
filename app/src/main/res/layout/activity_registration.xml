<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/Registration_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/Registration_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="用户注册"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ADADAD"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/Registration_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.2dp"
                    android:background="#FFFFFF"
                    android:hint="请输入昵称"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColorHint="@color/hint_gray"
                    android:textColor="@color/text_black"/>

                <EditText
                    android:id="@+id/Registration_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.2dp"
                    android:background="#FFFFFF"
                    android:hint="请输入姓名"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColorHint="@color/hint_gray"
                    android:textColor="@color/text_black"/>

                <EditText
                    android:id="@+id/Registration_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.2dp"
                    android:background="#FFFFFF"
                    android:hint="请输入注册密码"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColorHint="@color/hint_gray"
                    android:textColor="@color/text_black"/>

                <EditText
                    android:id="@+id/Registration_password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.2dp"
                    android:background="#FFFFFF"
                    android:hint="请重复注册密码"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColorHint="@color/hint_gray"
                    android:textColor="@color/text_black"/>

                <EditText
                    android:id="@+id/Registration_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0.2dp"
                    android:background="#FFFFFF"
                    android:hint="请输入电话号码"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColorHint="@color/hint_gray"
                    android:textColor="@color/text_black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_vcode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="0.2dp"
                        android:background="#FFFFFF"
                        android:hint="请输入验证码"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="@color/text_black"/>

                    <Button
                        android:id="@+id/btn_get_vcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_btn_bg"
                        android:textColor="#ffffff"
                        android:text="获取验证码"
                        />

                </LinearLayout>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/btn_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/btn_bussiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家"/>
            </RadioGroup>


            <TextView
                android:id="@+id/Registration_OK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/login_btn_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="注　册"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>